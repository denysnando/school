<div class="page-header clearfix">
  <div class="pull-left">
    <h1><small>Aluno <%= @student.name %> </small></h1>
  </div>
</div>
<h2><small>Cursos desse aluno </small></h2>
<table class="table table-condensed table-bordered table-striped table-hover ">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cadastro no curso</th>
    </tr>
  </thead>

  <tbody>
    <% @student.class_rooms.each do |c| %>
      <tr>
        <td><%= link_to c.course.name, course_path(c.course) %></td>
        <td><%= l c.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

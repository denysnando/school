<div class="page-header clearfix">
  <div class="pull-left">
    <h1><small>Lista de Estudante</small></h1>
  </div>
</div>
<% if flash[:notice].present? %>
  <div class="alert alert-success" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span>
    <%= flash[:notice] %>
  </div>
<% end %>
<table class="table table-condensed table-bordered table-striped table-hover ">
  <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th>Número de Registro</th>
      <th>Status</th>
      <th style="width: 30px;">Editar</th>
      <th style="width: 30px;">Ativar/Desativar</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |s| %>
      <tr>
        <td><%= link_to s.id, student_path(s) %></td>
        <td><%= link_to s.name, student_path(s) %></td>
        <td><%= link_to s.register_number, student_path(s) %></td>
        <td><%= link_to s.status_pt, student_path(s) %></td>
        <td><%=link_to raw("<span class='glyphicon glyphicon-edit'></span>"), edit_student_path(s) %></td>
        <% if s.status == 0 %>
          <td style="text-align: center;"><%=link_to raw("<span class='glyphicon glyphicon-remove'></span>"), student_desativation_student_path(s) %></td>
        <% else %>
          <td style="text-align: center;"><%=link_to raw("<span class='glyphicon glyphicon-ok'></span>"), student_ativation_student_path(s) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <%= link_to 'Cadastrar Novo Estudante', new_student_path, :class => 'btn btn-primary'  %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container" style="margin-top:40px">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading" style='text-align: center;'>
          <strong> Logar para continuar</strong>
        </div>
        <div class="panel-body">
          <form role="form" action="#" method="POST">
            <fieldset>
              <div class="row">
                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                      </span>
                      <%= f.email_field :email, placeholder: 'Email', autofocus: true,:class=>'form-control' %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-lock"></i>
                      </span>
                      <%= f.password_field :password, placeholder: 'Senha', autocomplete: "off",:class=>'form-control' %></br>
                    </div>
                  </div>
                  <div class="form-group" style='text-align: center;'>
                    <div><%= f.submit "Login",  :class => 'btn btn-primary' %></div>
                  </div>
                </div>
              </div>
            </fieldset>
          </form>
        </div>
        <div class="panel-footer ">
          <a><%= render "devise/shared/links" %></a>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
